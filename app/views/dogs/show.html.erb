<img src="<%=@dog.img%>"/>
<p>Breed: <%= @dog.breed %></p>     
<p>Gender: <%= @dog.sex %></p>
<p>Age: <%= @dog.age %></p>

<% if @dog.discount? %> 
<p>Price: $<%= @dog.price %></p>
<p>Discount item!</p>
<% else %>
<p>Everyday value!</p>
<% end %>

<p>Price: $<%= @dog.price %></p>
<p>Tax: $<%= @dog.tax %></p>
<p>Total: $<%= @dog.total %></p>


<div>
	<a href="/dog_store">Back to Adoption Center</a>
</div>
<div>
<a href="/dog_store/<%= @dog.id %>/edit">Edit this dog's information</a>
</div>
 <div>
   <%= link_to "Delete this information", "/dog_store/#{@dog.id}", method: :delete %>
 </div>

 <%= form_tag '/orders', method: :post do %>
  <div>
    <%= label_tag :quantity %>
    <%= text_field_tag :quantity %>
  </div>
  <div>
    <%= label_tag :product_id, 'Dog ID' %>
    <%= text_field_tag :product_id, @dog.id %>
  </div>
  <div>
    <%= label_tag :subtotal  %>
    <%= text_field_tag :subtotal, @dog.price  %>
  </div>
  <div>
    <%= label_tag :tax  %>
    <%= text_field_tag :tax, @dog.tax  %>
  </div>
  <div>
    <%= label_tag :total  %>
    <%= text_field_tag :total, @dog.total  %>
  </div>
  <div>
  <%= submit_tag "Buy Now!" %> 
  </div>
<% end %>